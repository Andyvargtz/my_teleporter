{
    "extends": "solhint:recommended",
    "rules": {
        "compiler-version": ["error", "0.8.18"],
        "no-unused-vars": "warn",
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ],
        "max-line-length": ["off"],
        "private-vars-leading-underscore": [
            "warn",
            {
                "strict": true
            }
        ],
        "ordering": "warn",
        "no-global-import": "off"
    }
}
